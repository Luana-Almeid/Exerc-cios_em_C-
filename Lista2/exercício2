/*Exercício 2. Faça  um  programa  que  leia  4  notas  de  4  alunos,  calcule  e  mostre  na tela  a soma  e  a  média  aritmética 
das notas. 
*/
using System;

class Program {
  public static void Main (string[] args) {

    //Declaração de variáveis
    float nota1, nota2, nota3, nota4, soma, media;

    //Entrada de dados
    Console.WriteLine ("Digite a primeira nota: ");
    nota1 = float.Parse(Console.ReadLine());
    Console.WriteLine ("Digite a segunda nota: ");
    nota2 = float.Parse(Console.ReadLine());
    Console.WriteLine ("Digite a terceira nota: ");
    nota3 = float.Parse(Console.ReadLine());
    Console.WriteLine ("Digite a quarta nota: ");
    nota4 = float.Parse(Console.ReadLine());

    //Processamento dos dados
    soma = nota1 + nota2 + nota3 + nota4;
    media = soma/4;

    //Saída da informação
    Console.WriteLine("A soma das notas é = " + Math.Round(soma, 2).ToString());
    Console.WriteLine("A média aritmética das notas é = " + Math.Round(media, 2).ToString());
    
  }
}
