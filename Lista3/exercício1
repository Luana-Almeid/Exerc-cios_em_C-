/*1) Faça um programa para ler um número inteiro e imprimir uma mensagem caso ele seja menor
que 3 ou maior que 25. */
using System;

class Program {
  public static void Main (string[] args) {

    //Declaração de variáveis
    int num;

    //Entrada de dados
    Console.WriteLine ("Digite um número inteiro: ");
    num = int.Parse(Console.ReadLine());

    //Processamento dos dados e saída da informação
    if(num < 3){
      Console.WriteLine("O número é menor do que 3.");
    }
    else if(num > 25){
       Console.WriteLine("O número é maior do que 25.");
    }
    else{
       Console.WriteLine("O número não se enquadra.");
    }
  }
}
